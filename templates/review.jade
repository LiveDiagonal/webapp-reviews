
extends layout

block append vars
  - bodyclass = 'article-detail'

block prepend title
  | #{ page.title + ' - '}

block header
  include author
  h1.uk-margin-small-bottom= page.title
  div
    | #{ 'Written by ' }
    mixin author(page.metadata.author)

block content
  article.article
    section.content!= typogr(page.html).typogrify()

block prepend footer
  div.uk-text-small
    a(href=contents.index.url) All Reviews
